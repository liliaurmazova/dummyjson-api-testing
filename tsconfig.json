{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["cypress", "node"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./cypress/*"],
      "@support/*": ["./cypress/support/*"],
      "@fixtures/*": ["./cypress/fixtures/*"]
    }
  },
  "include": [
    "cypress/**/*",
    "cypress.config.ts"
  ],
  "exclude": [
    "node_modules",
    "cypress/videos",
    "cypress/screenshots",
    "cypress/downloads"
  ]
}
